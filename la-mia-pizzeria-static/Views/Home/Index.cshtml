@using la_mia_pizzeria_static.Models
@model List<PizzaItem>
<div class="wrapper">
    <div class="container">
        <div class="row row-cols-3 g-4">
            @foreach (PizzaItem item in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@item.Thumbnail" class="card-img-top" alt="..." style="aspect-ratio:3/2">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <a asp-controller="Home" asp-action="PizzaDetails" asp-route-id ="@item.PizzaItemId" class="btn btn-primary">Dettagli prodotto</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>